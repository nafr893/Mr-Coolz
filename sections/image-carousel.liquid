{% comment %}
  Image Carousel Section
  Displays a rotating carousel of images.
{% endcomment %}

<section
  class="image-carousel-section section section--{{ section.settings.section_width }}"
  data-section-id="{{ section.id }}"
  style="
    padding-top: {{ section.settings.padding_top | default: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | default: 0 }}px;
  "
>
  <div class="{% if section.settings.section_width == 'page-width' %}page-width{% endif %}">
    {% if section.settings.heading != blank %}
      <h3 class="text-3xl font-bold mb-6 image-carousel-heading text-{{ section.settings.heading_alignment }}">
        {{ section.settings.heading }}
      </h3>
    {% endif %}

    <div class="image-carousel relative overflow-hidden">
      <div class="carousel-track flex transition-transform duration-700 ease-in-out">
        {% for block in section.blocks %}
          {% if block.type == 'carousel_image' %}
            <div class="carousel-slide min-w-1/2 sm:min-w-1/4">
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}">
              {% endif %}
                  {% if block.settings.image != blank %}
                    <div class="carousel-image-wrapper">
                      <img
                        src="{{ block.settings.image | image_url: width: 1600 }}"
                        alt="{{ block.settings.alt | escape }}"
                        class="carousel-image"
                        loading="lazy"
                      >
                    </div>
                  {% endif %}
              {% if block.settings.link != blank %}
                </a>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  <script>
    (() => {
      const section = document.querySelector(`[data-section-id="{{ section.id }}"]`);
      if (!section) return;

      const track = section.querySelector('.carousel-track');
      const slides = track.querySelectorAll('.carousel-slide');
      if (slides.length <= 1) return;

      // Determine slides per view
      const slidesPerView = window.innerWidth < 750 ? 2 : 4;
      let index = 0;

      function updateCarousel() {
        track.style.transform = `translateX(-${index * (100 / slidesPerView)}%)`;
      }

      {% if section.settings.auto_rotate %}
        setInterval(() => {
          index = (index + 1) % Math.ceil(slides.length / slidesPerView);
          updateCarousel();
        }, {{ section.settings.rotate_interval | default: 4000 }});
      {% endif %}

      // Responsive: update on resize
      window.addEventListener('resize', () => {
        updateCarousel();
      });
    })();
  </script>
</section>

{% schema %}
{
  "name": "Image Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Images"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto-rotate carousel",
      "default": true
    },
    {
      "type": "range",
      "id": "rotate_interval",
      "label": "Auto-rotate interval (ms)",
      "min": 2000,
      "max": 5000,
      "step": 500,
      "default": 4000
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_left",
      "label": "Padding left",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_right",
      "label": "Padding right",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        { "value": "page-width", "label": "Page width" },
        { "value": "full-width", "label": "Full width" }
      ],
      "default": "page-width"
    }
  ],
  "blocks": [
    {
      "type": "carousel_image",
      "name": "Carousel Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Optional link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Carousel",
      "category": "Image"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.image-carousel-section {
  position: relative;
  max-width: 100%;
}
.image-carousel-heading.text-left {
  text-align: left;
}
.image-carousel-heading.text-center {
  text-align: center;
}
.image-carousel-heading.text-right {
  text-align: right;
}
.carousel-track {
  display: flex;
  transition: transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
}
.carousel-slide {
  flex: 0 0 50%;
}
@media (min-width: 750px) {
  .carousel-slide {
    flex: 0 0 25%;
  }
}
.carousel-image-wrapper {
  aspect-ratio: 2 / 3;
  width: 100%;
  height: auto;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}
.carousel-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  display: block;
}
{% endstylesheet %}
