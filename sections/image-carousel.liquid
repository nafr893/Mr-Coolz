{% comment %}
  Image Carousel Section
  Displays up to 4 rotating images with optional links.
{% endcomment %}

<section class="image-carousel-section" data-section-id="{{ section.id }}">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="text-3xl font-bold mb-6 image-carousel-heading text-{{ section.settings.heading_alignment }}">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="image-carousel relative overflow-hidden">
      <div class="carousel-track flex transition-transform duration-700 ease-in-out">
        {% for block in section.blocks %}
          {% if block.type == 'carousel_image' %}
            <div class="carousel-slide min-w-full">
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}">
              {% endif %}
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | image_url: width: 1600 }}"
                      alt="{{ block.settings.alt | escape }}"
                      class="w-full object-cover rounded-2xl"
                      loading="lazy"
                    >
                  {% endif %}
              {% if block.settings.link != blank %}
                </a>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  <script>
    (() => {
      const section = document.querySelector(`[data-section-id="{{ section.id }}"]`);
      if (!section) return;

      const track = section.querySelector('.carousel-track');
      const slides = track.querySelectorAll('.carousel-slide');
      if (slides.length <= 1) return;

      {% if section.settings.auto_rotate %}
        let index = 0;
        setInterval(() => {
          index = (index + 1) % slides.length;
          track.style.transform = `translateX(-${index * 100}%)`;
        }, {{ section.settings.rotate_interval | default: 4000 }});
      {% endif %}
    })();
  </script>
</section>

{% schema %}
{
  "name": "Image Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Images"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto-rotate carousel",
      "default": true
    },
    {
      "type": "range",
      "id": "rotate_interval",
      "label": "Auto-rotate interval (ms)",
      "min": 2000,
      "max": 5000,
      "step": 500,
      "default": 4000
    }
  ],
  "blocks": [
    {
      "type": "carousel_image",
      "name": "Carousel Image",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Optional link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Carousel",
      "category": "Image"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.image-carousel-section {
  position: relative;
  max-width: 100%;
}
.image-carousel-heading.text-left {
  text-align: left;
}
.image-carousel-heading.text-center {
  text-align: center;
}
.image-carousel-heading.text-right {
  text-align: right;
}
.carousel-track {
  display: flex;
}
.carousel-slide {
  flex: 0 0 100%;
}
{% endstylesheet %}
